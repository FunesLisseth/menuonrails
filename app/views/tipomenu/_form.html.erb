<%= simple_form_for @tipomenu, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :idtipo %>
  <%= error_span(@tipomenu[:idtipo]) %>
  <%= f.input :name %>
  <%= error_span(@tipomenu[:name]) %>
  <%= f.input :description %>
  <%= error_span(@tipomenu[:description]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tipomenus_path, :class => 'btn btn-default' %>
<% end %>
